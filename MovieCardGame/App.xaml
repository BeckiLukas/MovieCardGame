<Application x:Class="MovieCardGame.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MovieCardGame"
             xmlns:viewModel="clr-namespace:MovieCardGame.MVVM.Viewmodel"
             xmlns:view="clr-namespace:MovieCardGame.MVVM.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type viewModel:GameViewModel}">
                <view:GameView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:StartViewModel}">
                <view:StartView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
